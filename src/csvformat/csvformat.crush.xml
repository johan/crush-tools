<?xml version="1.0"?>
<application>
	<name>csvformat</name>
	<category>General file manipulation</category>
	<description>converts a delimited file to csv format.</description>
	<options>
		<option has_argument="0" required="0" default="0xfe">
                        <name>delim</name>
                        <short>d</short>
                        <long>delim</long>
                        <description>the delimiter character</description>
                </option>
		<option has_argument="1" required="0">
			<name>output-file</name>
			<short>o</short>
			<long>output-file</long>
			<description>the output file</description>
		</option>
		<option has_argument="1" required="0">
			<name>input-file</name>
			<short>i</short>
			<long>input</long>
			<description>the input file</description>
		</option>
		<option has_argument="0" required="0">
			<name>no_escape</name>
			<short>n</short>
			<long>no-escape</long>
			<description>do not escape quotes</description>
		</option>

	</options>
	<details>
		<item><![CDATA[This application supercedes <a href="d2csv.html">d2csv</a>]]></item>
	</details>
	<example><![CDATA[
# find the delimiter of a dt file and then convert the whole thing to csv format
header=`<a href="bash_functions.html#get_header_line">get_header_line</a> $dtfile`
delim=`<a href="bash_functions.html#get_header_delim"></a> "$header"`

gzdog $dtfile |
	<b>csvformat</b> -d "$delim" \
	> `echo $dtfile | sed s/.log.gz/.csv`
]]></example>
</application>
