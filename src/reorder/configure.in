AC_INIT(reorder.c)
AM_CONFIG_HEADER(config.h)
AM_INIT_AUTOMAKE(reorder, 1.0)
AC_PROG_CC
AC_PROG_INSTALL

AC_CHECK_PROG(CGENER, [cgener], [cgener], [not found], [$PATH])

if test "$CGENER" = "not found"; then
	AC_MSG_ERROR([the cgener application is required to build this application], 1)
fi

AC_CHECK_HEADERS([ffutils.h regex.h assert.h])

AC_CHECK_LIB(ffutils, expand_nums, [], AC_MSG_ERROR([libffutils is required to build this application], 1))

AC_CHECK_FUNCS(open64)

AC_OUTPUT(Makefile)
