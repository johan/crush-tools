<?xml version="1.0"?>
<application>
	<name>cutfield</name>
	<category>General file manipulation</category>
	<description>removes fields from a character-delimited file.</description>
	<options>
		<option has_argument="0" required="0" default="0xfe">
                        <name>help</name>
                        <short>h</short>
                        <long>help</long>
                        <description>print this message and exit</description>
                </option>
		<option has_argument="1" required="0" default="0xfe">
			<name>delim</name>
			<short>d</short>
			<long>delim</long>
			<description>the field delimiter string</description>
		</option>
		<option has_argument="1" required="1">
			<name>field</name>
			<short>f</short>
			<long>field</long>
			<description>comma-separated positive numeric field numbers.</description>
		</option>
		<option has_argument="1" required="0">
			<name>output-file</name>
			<short>o</short>
			<long>output-file</long>
			<description>optional file for printing output.</description>
		</option>
		<option has_argument="1" required="0">
			<name>append-file</name>
			<short>a</short>
			<long>append-file</long>
			<description>optional file for appending output</description>
		</option>
	</options>
	<details>
		<item>you shouldn't use both -a and -o, but if you do, only the first will be used.</item>
	</details>
	<example><![CDATA[]]></example>
</application>
