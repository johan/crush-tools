<?xml version="1.0"?>
<application>
	<name>grepfield</name>
	<category>General file manipulation</category>
	<description>looks for patterns within a specific field of a flat-file</description>
	<options>
		<option has_argument="0" required="0">
			<name>help</name>
			<short>h</short>
			<long>help</long>
			<description>print this message and exit</description>
		</option>
		<option has_argument="0" required="0">
			<name>version</name>
			<short>V</short>
			<long>version</long>
			<description>print version info and exit</description>
		</option>
		<option has_argument="1" required="0">
			<name>delim</name>
			<short>d</short>
			<long>delim</long>
			<description>field separator string (default: 0xfe)</description>
		</option>
		<option has_argument="1" required="0">
			<name>outfile</name>
			<short>o</short>
			<long>outfile</long>
			<description>output file name (default: stdout)</description>
		</option>
		<option has_argument="1" required="0">
			<name>field</name>
			<short>f</short>
			<long>field</long>
			<description>index of field to scan (1-based)</description>
		</option>
		<option has_argument="0" required="0">
			<name>invert</name>
			<short>v</short>
			<long>invert</long>
			<description>print only non-matching lines</description>
		</option>
		<option has_argument="0" required="0">
			<name>ignore_case</name>
			<short>i</short>
			<long>ignore-case</long>
			<description>do case-insensitive matches</description>
		</option>
		<option has_argument="0" required="0">
			<name>preserve_header</name>
			<short>p</short>
			<long>preserve_header</long>
			<description>preserve the header line</description>
		</option>
	</options>
	<details>
		<item>if no field is specified, the entire input line is scanned.</item>
	</details>
	<example><![CDATA[
# get only matched activities from an activity file

header=`<a href="bash_functions.html#get_header_line">get_header_line</a> $dtfile`
delim=`<a href="bash_functions.html#get_header_delim">get_header_delim</a> "$header"`
event_id_index=`<a href="bash_functions.html#get_header_index">get_header_index</a> "Event-ID" "$header" "$delim"`

<a href="gzdog.html">gzdog</a> $dtfile |
	<b>grepfield</b> -f $event_id_index '[12]' \
	> $wdir/tmp/$$_matched_activities.log
]]></example>
</application>
